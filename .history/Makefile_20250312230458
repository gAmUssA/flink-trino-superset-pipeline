# ğŸš€ Flink-Trino-Superset Pipeline Makefile

# ğŸ¨ Colors for better readability
BOLD := \033[1m
GREEN := \033[32m
YELLOW := \033[33m
BLUE := \033[34m
MAGENTA := \033[35m
CYAN := \033[36m
RESET := \033[0m

# ğŸ“‹ Default target
.PHONY: help
help:
	@echo "$(BOLD)$(CYAN)ğŸš€ Flink-Trino-Superset Pipeline$(RESET)"
	@echo "$(BOLD)$(GREEN)Available targets:$(RESET)"
	@echo "  $(YELLOW)help$(RESET)              - Show this help message"
	@echo "  $(YELLOW)build$(RESET)             - Build all components"
	@echo "  $(YELLOW)up$(RESET)                - Start all services"
	@echo "  $(YELLOW)down$(RESET)              - Stop all services"
	@echo "  $(YELLOW)clean$(RESET)             - Clean up build artifacts"
	@echo "  $(YELLOW)logs$(RESET)              - Show logs from all services"
	@echo "  $(YELLOW)smoketest$(RESET)         - Validate startup of all containers"
	@echo "  $(YELLOW)build-flink-jobs$(RESET)  - Build Flink jobs"
	@echo "  $(YELLOW)deploy-flink-jobs$(RESET) - Deploy Flink jobs to the cluster"
	@echo "  $(YELLOW)create-tables$(RESET)     - Create Iceberg tables in Trino"
	@echo "  $(YELLOW)setup-superset$(RESET)    - Set up Superset dashboards"
	@echo "  $(YELLOW)demo$(RESET)              - Run complete demo (build, start, validate, deploy)"

# ğŸ—ï¸ Build all components
.PHONY: build
build: build-flink-jobs
	@echo "$(BOLD)$(GREEN)ğŸ—ï¸ Building all components...$(RESET)"

# ğŸš€ Start all services
.PHONY: up
up:
	@echo "$(BOLD)$(GREEN)ğŸš€ Starting all services...$(RESET)"
	docker-compose up -d

# ğŸ›‘ Stop all services
.PHONY: down
down:
	@echo "$(BOLD)$(GREEN)ğŸ›‘ Stopping all services...$(RESET)"
	docker-compose down

# ğŸ§¹ Clean up build artifacts
.PHONY: clean
clean:
	@echo "$(BOLD)$(GREEN)ğŸ§¹ Cleaning up build artifacts...$(RESET)"
	cd flink-jobs && ./gradlew clean
	rm -rf flink-jobs/build

# ğŸ“‹ Show logs from all services
.PHONY: logs
logs:
	@echo "$(BOLD)$(GREEN)ğŸ“‹ Showing logs from all services...$(RESET)"
	docker-compose logs -f

# ğŸ—ï¸ Build Flink jobs
.PHONY: build-flink-jobs
build-flink-jobs:
	@echo "$(BOLD)$(GREEN)ğŸ—ï¸ Building Flink jobs...$(RESET)"
	cd flink-jobs && ./gradlew buildAllJars

# ğŸš€ Deploy Flink jobs to the cluster
.PHONY: deploy-flink-jobs
deploy-flink-jobs: build-flink-jobs
	@echo "$(BOLD)$(GREEN)ğŸš€ Deploying Flink jobs to the cluster...$(RESET)"
	docker cp flink-jobs/build/libs/user-activity-processor-1.0-SNAPSHOT.jar flink-jobmanager:/opt/flink/usrlib/
	docker cp flink-jobs/build/libs/sensor-data-processor-1.0-SNAPSHOT.jar flink-jobmanager:/opt/flink/usrlib/
	docker exec -it flink-jobmanager flink run -c com.example.UserActivityProcessor /opt/flink/usrlib/user-activity-processor-1.0-SNAPSHOT.jar
	docker exec -it flink-jobmanager flink run -c com.example.SensorDataProcessor /opt/flink/usrlib/sensor-data-processor-1.0-SNAPSHOT.jar

# ğŸ“Š Create Iceberg tables in Trino
.PHONY: create-tables
create-tables:
	@echo "$(BOLD)$(GREEN)ğŸ“Š Creating Iceberg tables in Trino...$(RESET)"
	docker cp flink-jobs/create_tables.sql trino-coordinator:/tmp/
	docker exec -it trino-coordinator trino --server localhost:8080 --catalog iceberg -f /tmp/create_tables.sql

# ğŸ” Validate startup of all containers
.PHONY: smoketest
smoketest:
	@echo "$(BOLD)$(GREEN)ğŸ” Validating startup of all containers...$(RESET)"
	@echo "$(CYAN)Checking Kafka...$(RESET)"
	@docker-compose ps kafka | grep "Up" || (echo "$(BOLD)$(RED)âŒ Kafka is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Kafka is running$(RESET)"
	
	@echo "$(CYAN)Checking Kafka UI...$(RESET)"
	@docker-compose ps kafka-ui | grep "Up" || (echo "$(BOLD)$(RED)âŒ Kafka UI is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Kafka UI is running$(RESET)"
	
	@echo "$(CYAN)Checking Minio...$(RESET)"
	@docker-compose ps minio | grep "Up" || (echo "$(BOLD)$(RED)âŒ Minio is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Minio is running$(RESET)"
	
	@echo "$(CYAN)Checking Flink JobManager...$(RESET)"
	@docker-compose ps flink-jobmanager | grep "Up" || (echo "$(BOLD)$(RED)âŒ Flink JobManager is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Flink JobManager is running$(RESET)"
	
	@echo "$(CYAN)Checking Flink TaskManager...$(RESET)"
	@docker-compose ps flink-taskmanager | grep "Up" || (echo "$(BOLD)$(RED)âŒ Flink TaskManager is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Flink TaskManager is running$(RESET)"
	
	@echo "$(CYAN)Checking MySQL...$(RESET)"
	@docker-compose ps mysql | grep "Up" || (echo "$(BOLD)$(RED)âŒ MySQL is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… MySQL is running$(RESET)"
	
	@echo "$(CYAN)Checking Hive Metastore...$(RESET)"
	@docker-compose ps hive-metastore | grep "Up" || (echo "$(BOLD)$(RED)âŒ Hive Metastore is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Hive Metastore is running$(RESET)"
	
	@echo "$(CYAN)Checking Trino...$(RESET)"
	@docker-compose ps trino-coordinator | grep "Up" || (echo "$(BOLD)$(RED)âŒ Trino is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Trino is running$(RESET)"
	
	@echo "$(CYAN)Checking Superset...$(RESET)"
	@docker-compose ps superset | grep "Up" || (echo "$(BOLD)$(RED)âŒ Superset is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Superset is running$(RESET)"
	
	@echo "$(CYAN)Checking Data Generator...$(RESET)"
	@docker-compose ps data-generator | grep "Up" || (echo "$(BOLD)$(RED)âŒ Data Generator is not running!$(RESET)" && exit 1)
	@echo "$(GREEN)âœ… Data Generator is running$(RESET)"
	
	@echo "$(BOLD)$(GREEN)âœ… All containers are running!$(RESET)"

# ğŸ“ˆ Set up Superset dashboards
.PHONY: setup-superset
setup-superset:
	@echo "$(BOLD)$(GREEN)ğŸ“ˆ Setting up Superset dashboards...$(RESET)"
	@echo "$(YELLOW)Please access Superset at http://localhost:8088 and log in with admin/admin$(RESET)"
